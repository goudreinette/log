<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="/style.css">
  <script src="/form.js"></script>
</head>

{{#entry}}

<form action="/save/{{_id}}" method="post" class="entry">

    <section class='date'>
      {{date}}
    </section>

    <section class='fields'>
      {{#each fields as |value key|}}
        <div class="field">
          <label for="{{key}}">{{key}}</label>
          <input class='key' type="text" name="{{key}}" value="{{value}}"/>
        </div>
      {{/each}}
    </section>

    <textarea class='text' type="text" name='text'>
      {{text}}
    </textarea>

  <button type="submit" type="text">
    Submit
  </button>
</form>

{{/entry}}
